<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="reply">
  	
  	<!-- 댓글 생성 -->
  	<insert id="insert" parameterType="ReplyDto">
  		insert into reply(reply_no, reply_content, reply_origin, reply_member_no, reply_time)
  		values
  		(reply_seq.nextval, #{replyContent}, #{replyOrigin}, #{replyMemberNo}, sysdate)
  	</insert>
  	
  	<!-- 댓글 조회 -->
  	<select id="selectList" resultType="ReplyDto">
  		select * from reply_with_nick where reply_origin = #{replyOrigin}
  	</select>
  	
  	<!-- 댓글 삭제 -->
  	<delete id="delete" parameterType="int">
  		delete reply where reply_no = #{replyNo}
  	</delete>
  	
  	<!-- 단일 조회 -->
  	<select id="selectOne" resultType="ReplyDto">
  		select * from reply where reply_no = #{replyNo}
  	</select>
  	
  	<!-- 댓글 수정 -->
  	<update id="edit" parameterType="ReplyDto">
  		update reply set reply_content = #{replyContent} where reply_no=#{replyNo}
  	</update>
  
  </mapper>